html
  head
    title= title
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous")
  body
    .row
      .col-sm-3
        .card
          .card-body
            form(action="/insert" method="post")
              .mb-3
                label.form-label(for="exampleInputEmail1") User Name
                input.form-control(type="text" name="username")
              .mb-3
                label.form-label(for="exampleInputPassword1") User Email
                input.form-control(type="email" name="usermail")
              .text-center
                button.btn.btn-primary(type="submit") Insert


      .col-sm-3
        .card
          .card-body
            form(action="/getusers" method="get")
              .text-center
                button.btn.btn-primary(type="submit") get users



      .col-sm-3
        .card
          .card-body
            form(action="/update" method="post")
              .mb-3
                label.form-label(for="ID") ID
                input.form-control(type="text" name="id")
              .mb-3
                label.form-label(for="User name") User Name
                input.form-control(type="text" name="username1")
              .mb-3
                label.form-label(for="exampleInputPassword1") User Email
                input.form-control(type="email" name="usermail1")
              .text-center
                button.btn.btn-primary(type="submit") Update

      .col-sm-3
        .card
          .card-body
            form(action="/delete" method="post")
              .mb-3
                label.form-label(for="ID") ID
                input.form-control(type="text" name="id1")
              .text-center
                button.btn.btn-danger(type="submit") Delete

